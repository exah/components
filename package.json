{
  "name": "pss-components",
  "version": "5.0.0-1",
  "description": "",
  "author": "John Grishin <hi@johngrish.in>",
  "license": "MIT",
  "repository": "exah/components",
  "sideEffects": false,
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "files": [
    "./esm",
    "./cjs"
  ],
  "tags": [
    "css-in-js",
    "components",
    "react",
    "emotion",
    "prop-styles"
  ],
  "scripts": {
    "dev": "docz dev",
    "docs": "docz build",
    "build": "run-s build:*",
    "build:esm": "cross-env NODE_ENV=production babel src -d esm",
    "build:cjs": "cross-env NODE_ENV=production MODULES=cjs babel src -d cjs",
    "prebuild": "npm run cleanup",
    "watch": "run-p \"build:* -- -w\" \"test:unit -- --watchAll\"",
    "prewatch": "npm run cleanup",
    "test": "run-s test:*",
    "test:unit": "jest",
    "test:lint": "eslint src test",
    "release": "np --no-cleanup",
    "postrelease": "npm run deploy",
    "deploy": "npm run docs && cp dist/index.html dist/200.html && surge dist pss-components.surge.sh",
    "cleanup": "rimraf cjs esm dist",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "preversion": "npm run build",
    "precommit": "lint-staged",
    "prepush": "npm test"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "./src/**/*.js": "eslint",
    "./test/**/*.js": "eslint"
  },
  "browserslist": [
    "> 1%"
  ],
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "standard",
      "standard-react"
    ],
    "rules": {
      "no-shadow": 2,
      "react/prop-types": 0
    }
  },
  "auto-changelog": {
    "commitLimit": false,
    "template": ".changelog.hbs"
  },
  "jest": {
    "snapshotSerializers": [
      "jest-emotion/serializer"
    ],
    "testMatch": [
      "**/test/*.js"
    ]
  },
  "peerDependencies": {
    "prop-types": "^15.0.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.4",
    "auto-changelog": "1.13.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.7.1",
    "babel-plugin-emotion": "^10.0.9",
    "cross-env": "5.2.0",
    "docz": "1.0.4",
    "docz-theme-default": "^1.0.4",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^2.1.0",
    "jest": "^24.7.1",
    "jest-emotion": "^10.0.10",
    "lint-staged": "^8.1.5",
    "np": "5.0.1",
    "npm-run-all": "^4.1.5",
    "parse-prop-types": "^0.3.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-feather": "^1.1.6",
    "react-test-renderer": "^16.8.6",
    "rimraf": "^2.6.3"
  },
  "dependencies": {
    "@babel/runtime": "7.4.4",
    "@emotion/core": "^10.0.10",
    "@emotion/hash": "^0.7.1",
    "@emotion/is-prop-valid": "^0.7.3",
    "@emotion/styled": "^10.0.10",
    "@exah/utils": "^2.0.0",
    "emotion-theming": "^10.0.10",
    "pss": "^5.0.0-5",
    "reuse": "^2.0.0"
  }
}
