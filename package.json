{
  "name": "pss-components",
  "version": "5.0.1",
  "description": "",
  "author": "John Grishin <hi@johngrish.in>",
  "license": "MIT",
  "repository": "exah/components",
  "sideEffects": false,
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "files": [
    "esm",
    "cjs"
  ],
  "tags": [
    "css-in-js",
    "components",
    "react",
    "emotion",
    "prop-styles"
  ],
  "scripts": {
    "dev": "docz dev",
    "docs": "docz build",
    "build": "run-s build:*",
    "build:esm": "cross-env NODE_ENV=production babel src -d esm",
    "build:cjs": "cross-env NODE_ENV=production MODULES=cjs babel src -d cjs",
    "prebuild": "npm run cleanup",
    "watch": "run-p \"build:* -- -w\" \"test:unit -- --watchAll\"",
    "prewatch": "npm run cleanup",
    "test": "run-s test:*",
    "test:unit": "jest",
    "test:lint": "eslint src test",
    "test:size": "npm run build:esm && size-limit",
    "release": "np --no-cleanup",
    "postrelease": "npm run deploy",
    "deploy": "npm run docs && cp dist/index.html dist/200.html && surge dist pss-components.surge.sh",
    "cleanup": "rimraf cjs esm dist",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "preversion": "npm run build",
    "precommit": "lint-staged",
    "prepush": "npm test"
  },
  "size-limit": [
    {
      "limit": "11 KB",
      "path": "./esm/index.js"
    }
  ],
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "./src/**/*.js": "eslint",
    "./test/**/*.js": "eslint"
  },
  "browserslist": [
    "> 1%"
  ],
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "standard",
      "standard-react"
    ],
    "rules": {
      "no-shadow": 2,
      "array-bracket-spacing": 0,
      "react/prop-types": [
        2,
        {
          "ignore": [
            "children"
          ]
        }
      ]
    }
  },
  "auto-changelog": {
    "commitLimit": false,
    "template": ".changelog.hbs"
  },
  "jest": {
    "snapshotSerializers": [
      "jest-emotion/serializer"
    ],
    "testMatch": [
      "**/test/*.js"
    ]
  },
  "peerDependencies": {
    "@emotion/core": "^10.0.0",
    "@emotion/styled": "^10.0.0",
    "prop-types": "^15.0.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.6.2",
    "@emotion/core": "^10.0.17",
    "@emotion/styled": "^10.0.17",
    "@size-limit/preset-small-lib": "^2.1.6",
    "auto-changelog": "1.16.1",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-plugin-emotion": "^10.0.19",
    "cross-env": "6.0.0",
    "docz": "1.3.2",
    "docz-theme-default": "^1.2.0",
    "eslint": "6.4.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^3.0.7",
    "jest": "^24.9.0",
    "jest-emotion": "^10.0.17",
    "lint-staged": "^9.4.0",
    "np": "5.2.1",
    "npm-run-all": "^4.1.5",
    "parse-prop-types": "^0.3.0",
    "prop-types": "^15.7.2",
    "react": "^16.10.1",
    "react-dom": "^16.10.1",
    "react-feather": "^2.0.3",
    "react-is": "^16.10.1",
    "react-test-renderer": "^16.10.1",
    "rimraf": "^3.0.0"
  },
  "dependencies": {
    "@emotion/is-prop-valid": "^0.8.3",
    "@exah/utils": "^2.0.0",
    "pss": "^5.0.1"
  }
}
